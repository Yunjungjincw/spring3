<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.article">


<!-- select요소 : select 쿼리문 실행 
	id속성 : unique해야한다. 각 요소를 구분하기 위한 용도.
 -->
<!-- 전체 게시물 수 조회 -->
	<select id="totalCnt" resultType="java.lang.Integer"> 
		<![CDATA[ 
			select count(*)
			from article
		]]>
	</select>
	
	<!-- 전체 게시물 조회 -->
	<select id="articleList" resultType="com.ourcom.app3.domain.Article">
		<![CDATA[ 
		select *
		from article
		]]>
	</select>
	
	<select id="articleContent" parameterType="Integer" resultType="com.ourcom.app3.domain.Article">
		<![CDATA[ 
		select *
		from article
		where articleno=#{articleNo}
		]]>
	</select>
	
</mapper>